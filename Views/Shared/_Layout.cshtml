@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vishal College of Engineering</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        .quick-links {
            background-color: #f8f9fa;
            padding: 10px 20px;
            text-align: right;
            font-size: 16px;
            border-bottom: 1px solid #dee2e6;
        }

            .quick-links a {
                margin-left: 15px;
                text-decoration: none;
                color: #0d47a1;
                font-weight: 500;
            }

                .quick-links a:hover {
                    text-decoration: underline;
                }

        .logo {
            max-height: 60px;
        }

    </style>
</head>
<body>
    <!-- Logo and Quick Links Header -->
    <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
        <div class="d-flex align-items-center p-2 ps-4">
            <img src="~/images/logo.png" alt="College Logo" style="height: 60px;" />
            <h2 class="ms-3 mb-0" style="color: #0d47a1;">Vishal College Of Engineering, Solapur</h2>
        </div>
        <div class="quick-links">
            <a href="/Home/Index">Home</a>
            <a href="/Home/Departments">Departments</a>
            <a href="/Home/Courses">Courses</a>
            <a href="/Home/Faculty">Faculty</a>
            <a href="/Home/Events">Events</a>
            <a href="/Home/Library">Library</a>
        </div>
    </div>

    <!-- Main Page Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
