@{
}
@{
    ViewData["Title"] = "Admission Form";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container my-5">
    <h2 class="text-center mb-4">College Admission Form</h2>

    <form method="post" class="card p-4 shadow mx-auto" style="max-width: 700px;">
        <!-- Personal Details -->
        <h5 class="text-primary">Personal Information</h5>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="fullName" required>
            </div>
            <div class="col-md-6">
                <label for="dob" class="form-label">Date of Birth</label>
                <input type="date" class="form-control" id="dob" required>
            </div>
        </div>

        <!-- Education Details -->
        <h5 class="text-success">Academic Information</h5>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="qualification" class="form-label">Highest Qualification</label>
                <select class="form-select" id="qualification" required>
                    <option value="">Select</option>
                    <option>12th Pass</option>
                    <option>Diploma</option>
                    <option>Graduation</option>
                    <option>Post-Graduation</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="marks" class="form-label">Marks / CGPA</label>
                <input type="text" class="form-control" id="marks" required>
            </div>
        </div>

        <!-- Course Selection -->
        <div class="mb-3">
            <label for="course" class="form-label">Select Course</label>
            <select class="form-select" id="course" required>
                <option value="">Choose a Course</option>
                <optgroup label="Engineering (B.E / B.Tech)">
                    <option>Computer Engineering</option>
                    <option>Information Technology</option>
                    <option>Mechanical Engineering</option>
                    <option>Civil Engineering</option>
                    <option>AI and Data Science</option>
                </optgroup>
                <optgroup label="Master Courses (M.E / M.Tech)">
                    <option>M.Tech in Data Science</option>
                    <option>M.E. in Thermal Engineering</option>
                    <option>M.Tech in VLSI Design</option>
                </optgroup>
            </select>
        </div>

        <!-- Contact Details -->
        <h5 class="text-warning">Contact Information</h5>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="email" class="form-label">Email ID</label>
                <input type="email" class="form-control" id="email" required>
            </div>
            <div class="col-md-6">
                <label for="phone" class="form-label">Mobile Number</label>
                <input type="tel" class="form-control" id="phone" required>
            </div>
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Permanent Address</label>
            <textarea class="form-control" id="address" rows="3" required></textarea>
        </div>

        <!-- Submit -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">Submit Application</button>
        </div>
    </form>
</div>
