<style>
    .faculty-profile {
        max-width: 900px;
        margin: 30px auto;
        padding: 20px;
        font-family: 'Segoe UI', sans-serif;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        animation: slideUp 0.7s ease-in-out;
    }

        .faculty-profile h1 {
            color: #0d47a1;
            margin-bottom: 10px;
        }

        .faculty-profile h3 {
            color: #333;
            margin-bottom: 20px;
        }

        .faculty-profile ul {
            padding-left: 20px;
            color: #555;
        }

    @@keyframes slideUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

